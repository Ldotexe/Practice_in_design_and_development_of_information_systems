server {
    listen 80;
    
    # Папка, куда мы скопировали собранный React (из роли frontend)
    root /var/www/messenger;
    index index.html;

    # 1. ФРОНТЕНД
    # Отдаем статические файлы. Если файла нет, отдаем index.html (для React Router)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 2. БЭКЕНД (API)
    # Все запросы, начинающиеся с /api, шлем на Go-сервер
    location /api/ {
        proxy_pass http://target-app:8000; # Порт Go приложения
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}